                  </form>
                </tr>
              </tbody>
              <% } %>
            </tr>
          </table>
        </div>
      <%-partial('../../partials/personalArea/pagination')%>
      </div>

      <div class="widget-box sample-widget">
        <div class="widget-header">
          <h2>New student</h2>
          <i class="fa fa-cog"></i>
        </div>
        <div class="widget-content">
          <form action="/addNewStudent" method="POST" name="addNewStudentForm" id="myForm">

            <label for="flogin">Login</label>
            <input type="text" id="flogin" name="login" placeholder="Enter login">

            <label for="fpassword">Password</label>
            <input type="text" id="fpassword" name="password" placeholder="Create password">

            <label for="fname">Name</label>
            <input type="text" id="fname" name="name" placeholder="Enter name">

            <label for="fage">Age</label>
            <input type="number" id="fage" name="age" min="5" max="200" placeholder="Enter age">

            <label for="fgender">Gender</label>
            <select id="fgender" name="gender">
              <option>Male</option>
              <option>Female</option>
              <option>Non-binary</option>
              <option>Non-applicable</option>
              <option>I prefer not say</option>
            </select>

            <input type="submit" id="createNewPID" value="Create new student">
              <div class="help-block">
                <span class="error"></span>
               </div>
          </form>
        </div>
      </div>


         <script>
             var form = $('form[name="addNewStudentForm"]');

             form.submit(function(e) {
                    e.preventDefault();
                    var login = $("input[name='login']").val();
                    var password = $("input[name='password']").val();
                    var name = $("input[name='name']").val();
                    var age =$("input[name='age']").val();
                    var gender = $("select[name='gender']").val();
                    var idTag =$("input[name='idTag']").val();

                    $.ajax({
                        type: "POST",
                        url: "/addNewStudent",
                        data: JSON.stringify({login: login, password: password, name: name, age: age, gender: gender}),
                        dataType: "json",
                        contentType: "application/json",
                        statusCode:{
                           200: function(){
                             form.trigger('reset'); // очистить поля формы
                             $('.error', form).html('');
                            window.location.reload(); // после AJAX пагинации убрать, т.к надо отрисовывать еще при добавлении
                           },
                           403: function(){
                            $('.error', form).html('Student already exists with login: ' + login);
                           }
                         }
                       });
                });
            </script>
