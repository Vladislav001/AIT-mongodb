<div class="block">
  <p>My students</p>
  <table border="0">
    <tr class="table__headRow">
      <th>#</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th></th>
    </tr>
    <!--  -->
    <tr>
      <% for (var i=0; i< students.length; i++) { %>
      <tbody>
        <tr class="info">
          <td>
            <%=i+1%>
          </td>
          <td><a href="/publicProfile/students/id<%=students[i].id%>">
              <%=students[i].name%></a></td>
          <td>
            <%=students[i].gender%>
          </td>
          <td>
            <%=students[i].age%>
          </td>
          <form action="/delete-pid/id<%=students[i].id%>" method="POST" name="deleteStudentForm">
            <td>
              <button type="button" name="button" class="deleteBtn" onclick="return confirmDelete();">delete</button>
            </td>
          </form>
        </tr>
      </tbody>
      <% } %>
    </tr>
  </table>
  <%-partial('../../partials/personalArea/pagination')%>
</div>

<div class="block">
  <p>Create new student</p>
  <form action="/addNewStudent" method="POST" class="modal__form" name="addNewStudentForm">
    <label for="login">Login</label>
    <input type="email" name="login" value="" required>
    <label for="login">Password</label>
    <input type="password" name="password" value="" required>
    <label for="login">Name</label>
    <input type="text" name="name" value="" required>
    <label for="login">Age</label>
    <input type="number" name="age" min="5" max="100" required>
    <label for="fgender">Gender</label>
    <select name="gender" required>
      <option>Male</option>
      <option>Female</option>
      <option>Non-binary</option>
      <option>Non-applicable</option>
      <option>I prefer not say</option>
    </select>
    <button type="submit" name="button">Create</button>
  </form>
</div>

<script>
  var form = $('form[name="addNewStudentForm"]');


  form.submit(function(e) {
    e.preventDefault();
    var login = $("input[name='login']").val();
    var password = $("input[name='password']").val();
    var name = $("input[name='name']").val();
    var age = $("input[name='age']").val();
    var gender = $("select[name='gender']").val();
    var _id = $("input[name='_id']").val();


    $.ajax({
      type: "POST",
      url: "/addNewStudent",
      data: JSON.stringify({
        login: login,
        password: password,
        name: name,
        age: age,
        gender: gender
      }),
      dataType: "json",
      contentType: "application/json",
      statusCode: {
        200: function() {
          form.trigger('reset'); // очистить поля формы
          $('.error', form).html('');
          window.location.reload(); // после AJAX пагинации убрать, т.к надо отрисовывать еще при добавлении
        },
        403: function() {
          $('.error', form).html('Student already exists with login: ' + login);
        }
      }
    });
  });
</script>
