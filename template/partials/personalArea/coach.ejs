                  <td><%=students[i].gender%></td>
                  <td><%=students[i].age%></td>
                  <!-- <form action="/editStudent/id<%=students[i].id%>" method="POST" name="editStudentForm">
                    <td class="edit"><button class="edit-buttons">Edit</button></td>
                  </form> -->
                  <form action="/deleteStudent/id<%=students[i].id%>" method="POST" name="deleteStudentForm">
