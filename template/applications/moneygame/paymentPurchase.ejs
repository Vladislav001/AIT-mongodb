<link rel='stylesheet' href='/css/applications/moneygame/paymentPurchase.css' />
<link rel='stylesheet' href='/css/applications/moneygame/main.css' />

<% layout('../../layout/pattern') -%>
    <%-partial('../../partials/leftVerticalMenu')%>

        <section id="content">
            <div class="content">
                <div class="content-header">
                    <h1>Customize MoneyGame</h1>
                </div>
                <div class="container">
                    <div class="pagination">
                        <a href="/customizeMoneyGame/collectionMoney/id<%=student.id%>">Collection Money</a>
                        <a href="/customizeMoneyGame/selectionGoods/id<%=student.id%>">Selection Goods</a>
                        <a href="/customizeMoneyGame/paymentPurchase/id<%=student.id%>" class="a-active">Payment Purchase</a>
                        <a href="/customizeMoneyGame/takeChangee/id<%=student.id%>">Take Changee</a>
                    </div>
                    <%-partial('./partials/settings')%>
                        <div class="game">
                            <div class="game-header">
                                <img class="nav-btn" id="backBtn" title="Back Button">
                                <div id="progressBar" class="none" title="Progress Bar"><div></div></div>
                                <img class="nav-btn" id="nextBtn" title="Next Button">
                                <img class="nav-btn none" id="againBtn">
                            </div>
                            <div class="main">
                                <div class="row">
                                    <div class="game-block">1</div>
                                    <div class="game-block">2</div>
                                    <div class="game-block">3</div>
                                </div>
                                <div class="row">
                                    <div class="game-block">4</div>
                                    <div class="game-block">5</div>
                                    <div class="game-block">6</div>
                                </div>
                                <div class="row hidden">
                                    <div class="game-block">7</div>
                                    <div class="game-block">8</div>
                                </div>
                                <div class="row hidden">
                                    <div class="game-block">1</div>
                                    <div class="game-block">2</div>
                                    <div class="game-block">3</div>
                                </div>
                                <div class="row hidden">
                                    <div class="game-block">1</div>
                                    <div class="game-block">2</div>
                                    <div class="game-block">3</div>
                                </div>
                            </div>
                            <div class="game-footer">
                                <img id="wallet" title="Wallet">
                                <img id="basket" class="none">
                            </div>

                        </div>
                </div>
            </div>
        </section>

  <%-partial('./partials/settingsLogic')%>
