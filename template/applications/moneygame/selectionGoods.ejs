<link rel='stylesheet' href='/css/applications/moneygame/selectionGoods.css' />
<link rel='stylesheet' href='/css/applications/moneygame/main.css' />

<% layout('../../layout/pattern') -%>
    <%-partial('../../partials/leftVerticalMenu')%>

        <section id="content">
            <div class="content">
                <div class="content-header">
                    <h1>Customize MoneyGame</h1>
                </div>
                <div class="container">
                    <div class="pagination">
                        <a href="/customizeMoneyGame/collectionMoney/id<%=student.id%>">Collection Money</a>
                        <a href="/customizeMoneyGame/selectionGoods/id<%=student.id%>" class="a-active">Selection Goods</a>
                        <a href="/customizeMoneyGame/paymentPurchase/id<%=student.id%>">Payment Purchase</a>
                        <a href="/customizeMoneyGame/takeChangee/id<%=student.id%>">Take Changee</a>
                    </div>
                    <%-partial('./partials/settings')%>
                        <div class="game">
                            <div class="game-header">
                                <img class="nav-btn" id="backBtn" title="Back Button">
                                <div id="progressBar" class="none" title="Progress Bar"><div></div></div>
                                <img class="nav-btn" id="nextBtn" title="Next Button">
                                <img class="nav-btn none" id="againBtn">
                            </div>
                            <div class="main">
                                <div class="row">
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/1cents.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/2cents.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/5cents.png"></div>
                                </div>
                                <div class="row">
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/10cent.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/20cent.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/50cent.png"></div>
                                </div>
                                <div class="row">
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/1euro.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/2euro.png"></div>
                                </div>
                                <div class="row hidden">
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/5euro.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/10euro.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/20euro.png"></div>
                                </div>
                                <div class="row hidden">
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/50euro.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/100euro.png"></div>
                                    <div class="game-block"><img src="/application/applicationImages/MoneyGame/money/200euro.png"></div>
                                </div>
                            </div>
                            <div class="game-footer">
                                <img id="basket" title="Basket"></div>
                                <img id="wallet" class="none">
                            </div>

                        </div>
                </div>
            </div>
        </section>

        <%-partial('./partials/settingsLogic')%>
